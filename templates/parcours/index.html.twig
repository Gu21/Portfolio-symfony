{% extends 'base.html.twig' %}

{% block title %}Parcours index{% endblock %}

{% block body %}
    <h1>Parcours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TitreParcours</th>
                <th>SousTitreParcours</th>
                <th>DateDebutParcours</th>
                <th>DateFinParcours</th>
                <th>DescriptifParcours</th>
                <th>Ordre</th>
                <th>Modification</th>

            </tr>
        </thead>
        <tbody>
        {% for parcour in parcours %}
            <tr>
                <td>{{ parcour.id }}</td>
                <td>{{ parcour.titreParcours }}</td>
                <td>{{ parcour.sousTitreParcours }}</td>
                <td>{{ parcour.dateDebutParcours ? parcour.dateDebutParcours|date('Y-m-d') : '' }}</td>
                <td>{{ parcour.dateFinParcours ? parcour.dateFinParcours|date('Y-m-d') : '' }}</td>
                <td>{{ parcour.descriptifParcours |raw }}</td>
                <td>{{ parcour.ordre }}</td>
                <td>
                    <a href="{{ path('parcours_show', {'id': parcour.id}) }}">show</a>
                    <a href="{{ path('parcours_edit', {'id': parcour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('parcours_new') }}">Create new</a>
{% endblock %}
