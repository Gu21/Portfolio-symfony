{% extends 'base.html.twig' %}

{% block title %}Technologies index{% endblock %}

{% block body %}

<section class="sectionTechnologie d-flex flex-column justify-content-center">

<div class="container boxTechnologies">
    <h1 class="titleTechnologie">Technologies index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageTechnologie</th>
                <th>NomTechnologie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for technology in technologies %}
            <tr>
                <td>{{ technology.id }}</td>
                <td><img src="{{ asset('uploads/photos/' ~  technology.imageTechnologie) }}" width="100"></td>
                <td>{{ technology.nomTechnologie }}</td>
                <td>
                    <a href="{{ path('technologies_show', {'id': technology.id}) }}">show</a>
                    <a href="{{ path('technologies_edit', {'id': technology.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('technologies_new') }}">Create new</a>
</div>

</section>
 
{% endblock %}
